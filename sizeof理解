#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>	
//数组名的理解,指针类型和指针运算的理解
int main() {
	int a[] = { 1,2,3,4 };
	printf("%d\n", sizeof(a));  //   16            数组名表示整个数组，计算整个数组的大小，单位是字节     a《=》&a[0]
	printf("%d\n", sizeof(a+0)); //  4或者8   a+0数组首元素地址，即指针变量，其大小取决于系统         a+0《=》&a[0]+0
	printf("%d\n", sizeof(*a));   // 4            首元素大小a[0],也叫首元素类型的大小,对首元素地址解引用
	printf("%d\n", sizeof(a+1));  // 4或者8   a+0数组第二个元素地址，即指针变量，其大小取决于系统         a+1《=》&a[1]
	printf("%d\n", sizeof(a[1]));  // 4           第二个元素字节大小
	printf("%d\n", sizeof(&a));  // 4或者8    数组a的地址，即数组名的地址，&a = int (*)[4]  类型
	printf("%d\n", sizeof(*&a));  // 16         *&a = a,即整个数组
	printf("%d\n", sizeof(&a+1)); // 4或者8             跳过一个数组,即向后跳过4个整型元素的地址
	printf("%d\n", sizeof(&a[0]));  // 4或者8            第二个元素的地址
	printf("%d\n", sizeof(&a[0] + 1));  // 4或者8       跳过一个数组元素，即第二个元素的地址，&a[1]
	return 0;
}
