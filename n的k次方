#include <stdio.h>

double Pow(int n, int k) {
	if (k>0)
		return n * Pow(n, k - 1);
	else if (k == 0)
		return 1;
	else
		return 1.0 / Pow(n, -k);
}

int main() {
	int n, k;
	printf("Enter base (n): ");
	scanf("%d", &n);
	printf("Enter exponent (k): ");
	scanf("%d", &k);
	printf("%d^%d = %f\n", n, k, Pow(n, k));
	return 0;
}	
