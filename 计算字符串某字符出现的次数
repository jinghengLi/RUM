#define _CRT_SECURE_NO_WARNINGS
#define _CRT_SECURE_NO_WARNINGS
#include <string.h>
#include <stdio.h>
#include <ctype.h>
int main() {
    char str[10000] = { 0 };
    char n = 0;
    int count = 0;
    // 使用 fgets 是安全的，但要确保指定正确的缓冲区大小
    if (fgets(str, sizeof(str), stdin) != NULL) {
        str[strcspn(str, "\n")] = '\0';
    }
    // 使用 fgets 是安全的，但要确保指定正确的缓冲区大小
    scanf("%c", &n);
    int i = 0;
    while (str[i] != '\0') {
        if (tolower(n) == tolower(str[i])) {
            count++;
        }
        i++;
    }
    printf("%d\n", count);
    return 0;
}
