#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>


int main() {
	int n = 0;
	int arr[1000] = { 0 };
	scanf("%d", &n);
	int i = 0;
	int flag1 = 0;
	int flag2 = 0;
	for (int i = 0; i < n; i++) {
			scanf("%d", &arr[i]);
			if (i > 0) {
				if (arr[i] > arr[i - 1]) {
					flag1 = 1;
				}
				else if (arr[i] < arr[i - 1]) {
					flag2 = 1;
				}
				else {
					;
				}
			}
	}
	if (flag1 + flag2 <= 1) {
		printf("YES\n");
	}
	else
		printf("NO\n");
	return 0;
}
