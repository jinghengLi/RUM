#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {

	int n = 0;
	while (scanf("%d", &n) == 1) {
		for (int i = 0; i <= n; i++) {
			for (int j = 0; j < 2 * n + 1; j++) {
				if (j < 2*n-2*i) {
					printf("  ");
				}
				if (2 * n - 2 * i <= j && j<=2 * n - i) {
					printf(" *");
				}
			}
			printf("\n");
			printf("\n");
		}
		for (int i = n+1; i <2 * n + 1; i++) {
			for (int j = 0; j < 2 * n + 1; j++) {
				if (j < 2 * i - 2 * n) {
					printf("  ");
				}
				if (2 * i - 2 * n <= j && j <i+1) {
					printf(" *");
				}
			}
			printf("\n");
			printf("\n");
		}
	}


	return 0;
}
