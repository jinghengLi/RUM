#define _CRT_SECURE_NO_WARNINGS
#include <math.h>
#include <stdio.h>

int main() {
	int i = 0, j = 0;
	char arr[13][13] = { 0 };
	for (i = 0; i < 13; i++) {
		if (i<7) {
			for (j = 0; j < 13; j++) {
				if (j >= 6 - i && j <= 6 + i) {
					arr[i][j] = '*';
				}
			}
		} else {
			for (j = 0; j < 13; j++) {
				if (j >= i - 6 && j <= 18 - i) {
					arr[i][j] = '*';
				}
			}
		}
	}
	for (i = 0; i < 13; i++) {
		for (j = 0; j < 13; j++) {
			if (arr[i][j] == '*') {
				printf("%c", arr[i][j]);
			} else {
				printf(" ");
			}
		}
		printf("\n");
	}

	return 0;
}
