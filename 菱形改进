#define _CRT_SECURE_NO_WARNINGS
#include <math.h>
#include <stdio.h>

int main() {
	int line = 0;
	scanf("%d", &line);
	//上半部分
	for (int i = 0; i < line; i++) {
		//一行
		//空格
		for (int j = 0; j < line - i - 1; j++) {
			printf(" ");
		}
		//星号
		for (int j = 0; j < 2 * i + 1; j++) {
			printf("*");
		}
		//换行
		printf("\n");
	}
	//下半部分
	for (int k = line - 2; k >= 0; k--) {
		//一行
		//空格
		for (int j = 0; j < line - k - 1; j++) {
			printf(" ");
		}
		//星号
		for (int j = 0; j < 2 * k + 1; j++) {
			printf("*");
		}
		//换行
		printf("\n");
	}

	return 0;
}
