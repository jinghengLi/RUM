#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>

int is_Rotate(const char* str1, const char* str2) {
    int sz = strlen(str1);
    // 如果两个字符串长度不同，则不可能是旋转
    if (sz != strlen(str2)) {
        return 0;
    }

    // 检查 str1 是否是 str2 的旋转
    for (int i = 0; i < sz; i++) {
        int match = 1;
        for (int j = 0; j < sz; j++) {
            if (str1[j] != str2[(i + j) % sz]) {
                match = 0;
                break;
            }
        }
        if (match) {
            return 1;
        }
    }
    return 0;
}

int main() {
    char s1[] = "AABCD";
    char s2[] = "DAABC";
    int ret = is_Rotate(s1, s2);
    printf("%d\n", ret);  // 输出 1 表示 s1 是 s2 的旋转，输出 0 表示不是
    return 0;
}
